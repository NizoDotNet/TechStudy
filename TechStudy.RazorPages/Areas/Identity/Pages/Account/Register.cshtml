@page "/Register"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="register-form">
    <div class="container mt-5">
        <form method="post" class="was-validated">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating">
                    <input asp-for="Input.FirstName" type="text" class="form-control" name="name" id="name" placeholder="Name" required>
                    <label asp-for="Input.FirstName">Ad:</label>
                    <span asp-validation-for="Input.FirstName"></span>
                </div>
                <br>
                <div class="form-floating">
                    <input asp-for="Input.SecondName" type="text" class="form-control" name="surname" id="surname" placeholder="Surname" required>
                    <label asp-for="Input.SecondName">Soyad:</label>
                    <span asp-validation-for="Input.SecondName"></span>

                </div><br>
                <div class="form-floating">
                    <input asp-for="Input.Email" type="email" class="form-control" name="email" id="email" placeholder="Email" required>
                    <label asp-for="Input.Email">Email:</label>
                    <span asp-validation-for="Input.Email"></span>

                </div><br>
                <div class="form-floating">
                    <input asp-for="Input.PhoneNumber" type="phone" class="form-control" name="phone" id="phone" placeholder="Telefon" required>
                    <label asp-for="Input.PhoneNumber">Telefon nömrəsi:</label>
                    <span asp-validation-for="Input.PhoneNumber"></span>

                </div><br>
                <div class="form-floating">
                    <input asp-for="Input.Password" type="password" class="form-control" name="password" id="password" placeholder="Password" required>
                    <span onclick="showPassword()"> <i id="togglePassword" class="fa-regular fa-eye"></i></span>
                    <label asp-for="Input.Password">Şifrə:</label>
                    <span asp-validation-for="Input.Password"></span>

                </div><br>
                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" name="password" id="password" placeholder="Password" required>
                    <label asp-for="Input.ConfirmPassword">Şifrənin təkrarı:</label>
                    <span asp-validation-for="Input.ConfirmPassword"></span>

                </div><br>
                <div class="form-floating">
                <select class="form-select" asp-items="Model.SpecList" asp-for="Input.Specialization"></select>
                <label asp-for="Input.Specialization">İxtisas</label>
                </div><br>
                <button class="btn ">Təsdiqlə</button>
        </form>
    </div>  
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
