@page
@model IndexModel
@{
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>
                First Name
            </th>
            <th>
                Second Name
            </th>
            <th>
                Email
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Email Confirmed
            </th>
            <th>
                Phone Number Confirmed
            </th>
        </tr>
       
    </thead>
    <tbody>
        @foreach(var user in Model.Users)
        {
            <tr>
                <td>
                    @user.Id
                </td>
                <td>
                   @user.FirstName
                </td>
                <td>
                    @user.SecondName
                </td>
                <td>
                    @user.Email
                </td>
                <td>
                    @user.PhoneNumber
                </td>
                <td>
                    @user.EmailConfirmed
                </td>
                <td>
                    @user.PhoneNumberConfirmed
                </td>
                <td>
                    <a asp-page="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
                <td>
                    <a class="btn text-white" asp-page="Claims/Index" asp-route-userId="@user.Id">Manage</a>
                </td>
            </tr>
            
        }
    </tbody>
</table>

<style>
    tr {
        color: white;
    }
</style>