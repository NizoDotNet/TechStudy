@page
@model IndexModel
@{ 
}

<div class="container">
    <table class="table">
        <tr>
            <th>Group Id</th>
            <th>Group Description</th>
        </tr>
        @foreach(var group in Model.Groups)
        {
            <tr>
                <td>@group.Id</td>
                <td>@group.Description</td>
                <td><a class="btn text-white" asp-page="Group" asp-route-id="@group.Id">More</a></td>
            </tr>
        }
    </table>

</div>
<style>
    tr {
        color: white;
    }
</style>