@page
@model TechStudy.RazorPages.Pages.GroupsModel
@{
}
<div class="container keep-footer-at-bottom">
    <table class="table">
        <tr>
            <th>Group Name</th>
            <th>Group Description</th>
            <th></th>
        </tr>
        @foreach (var group in Model.Groups)
        {
            <tr>
                <td>@group.Name</td>
                <td>@group.Description</td>
            </tr>
        }
    </table>

</div>
<style>
    tr {
        color: white;
    }
</style>